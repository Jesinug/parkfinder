
<form method="POST" action="/auth/signup">

<div class="form-style">
  <h1>Signup page</h1>
  <div class="mb-3 needs-validation">
    <label for="exampleInputEmail1" class="form-label">Username</label>
    <div>
    <input  type="text" class="form-control"  aria-describedby="emailHelp" name="username" required>
    </div>
    <div id="emailHelp" class="form-text"></div>
  </div>
  <div class="mb-3 needs-validation">
    <label for="exampleInputEmail1" class="form-label">Email</label>
    <div>
    <input  type="text" class="form-control" aria-describedby="emailHelp" name="email" required>
    </div>
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <div>
    <input  type="password" class="form-control" id="exampleInputPassword1" name="password" required minlength="3" maxlength="10">
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
{{#if errorMessage}}
  <div>
   <p class="error-message"> {{ errorMessage }}</p>
  </div>
{{/if}}