<h1>CREATE A PARK</h1>

<form action="/parks/create" method="POST">

    <label for="parks-name">Name:</label>
    <input type="text" name="name">
    
    <label for="parks-description">Description:</label>
    <input type="text" name="description">

    <label for="parks-images">Images</label>
    <input type="file" name="images">

    <label for="parks-location">Location:</label>
    <input type="map" name="location">

    <label for="parks-extension">Extension:</label>
