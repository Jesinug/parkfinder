    <input type="checkbox" id="trees" name="trees" value="Trees">
    <label for="trees"> Trees </label><br><br>
    
    <input type="checkbox" id="allowDogs" name="dogs" value="Dogs">
    <label for="vehicle2"> Allow dogs </label><br>
    
    <input type="checkbox" id="wifi" name="wifi" value="Wifi">
    <label for="wifi"> Wifi service </label><br><br>
    
    <input type="checkbox" id="skateZone" name="skateZone" value="Skate">
    <label for="skateZone"> Skate zone </label><br><br>

